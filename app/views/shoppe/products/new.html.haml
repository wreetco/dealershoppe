- @page_title = t('shoppe.products.products')

= javascript_include_tag 'vin_lookup.js'

= content_for :header do
  %p.buttons= link_to t('shoppe.products.back_to_products') , :products, :class => 'button'
  %h2.products= t('shoppe.products.products')

%div.vin_lookup{:'ng-app' => 'vinLookup', :'ng-controller' => 'MainCtrl'}
  %ng-view
  %h1 VIN Lookup
  %input.text{:name => "vin", :'ng-model' => 'vin'}
  %br
  %button.green.button.button-mini{:'ng-click' => "lookupVin(this.value)"} Decode

%br

= render 'form'
